<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">


    <mapper namespace="com.atguigu.mapper.RoleMapper">
        <sql id="columns">
            SELECT id,role_name,role_code,description,create_time,update_time,is_deleted
        </sql>

        <select id="findAll" resultType="Role">
            <include refid="columns"></include>
            FROM acl_role
            WHERE is_deleted=0
            ORDER BY update_time DESC
        </select>

        <insert id="insert">
            INSERT INTO acl_role (role_name,role_code,description)
            VALUES (#{roleName},#{roleCode},#{description})
        </insert>

        <update id="delete">
            UPDATE acl_role SET is_deleted=1 WHERE id=#{id} AND is_deleted=0
        </update>

        <select id="getById" resultType="Role">
            <include refid="columns"></include>
            FROM acl_role
            WHERE id=#{id} AND is_deleted=0
        </select>

        <update id="update">
            UPDATE acl_role
            <set>
                <if test="roleName != null and roleName != ''">
                    role_name=#{roleName},
                </if>
                <if test="roleCode != null and roleCode != ''">
                    role_code=#{roleCode},
                </if>
                <if test="description != null and description != ''">
                    description=#{description},
                </if>
                update_time=now()
            </set>

            WHERE id=#{id} AND is_deleted=0
        </update>

        <sql id="findPageWhere">
            <where>
                is_deleted=0
                <if test="roleName != null and roleName != ''">
                    AND role_name LIKE CONCAT("%",#{roleName},"%")
                </if>
            </where>
        </sql>

        <select id="findPage" resultType="Role">
            <include refid="columns"></include>
            FROM acl_role
            <include refid="findPageWhere"></include>
            ORDER BY update_time DESC
        </select>
</mapper>